{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
  },
  "exclude": ["build", "dist"]
}
